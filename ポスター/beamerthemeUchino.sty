\newif\ifbeamer@secheader
\beamer@secheaderfalse

\DeclareOptionBeamer{secheader}{\beamer@secheadertrue}
\ProcessOptionsBeamer

\usepackage[absolute,overlay]{textpos}
\usecolortheme{Uchino}% colorthemeはslideと同様に選択できます．


%=====
% Color
%=====
\setbeamercolor{title}{fg=black}
\setbeamercolor{block body}{bg=white}


%=====
% Title
%=====
\newcommand{\eauthor}[1]{\institute{#1}}
\setbeamerfont{title}{size=\huge}
\setbeamerfont{subtitle}{size=\large}
\setbeamerfont{institute}{size=\normalsize}
\newcommand{\TITLE}[5]{%
	\vspace{0.005\linewidth}
	\begin{tcolorbox}[%
		colframe=#1,% 外枠
		coltext=#2,% 名前の文字の色
		colback=#3,% 名前の背景色
		coltitle=#4,% タイトル文字の色
		colbacktitle=#5,% タイトルの背景色
		title={\vspace{0.01\linewidth}\centering%
			\usebeamerfont{title}\inserttitle\\%
			\usebeamerfont{subtitle}\insertsubtitle%
			\vspace{0.01\linewidth}}]
			\usebeamerfont{author}\insertauthor\qquad%
			\usebeamerfont{institute}\insertinstitute%
	\end{tcolorbox}
	\vspace{-0.5em}
}

%=====
% Box
%=====
\newenvironment{Colorbox}[2][]
{\begin{tcolorbox}[colback=#1!5!white,colframe=#1,title={\textbf{#2}}]}{\end{tcolorbox}}

\newcommand{\chumoku}[2]{\tcbox[boxrule=4pt,center,colback=#1!10,colframe=#1,varwidth upper]{#2}}

\newcommand{\chumokuinline}[2]{\tikz[baseline=(T.base)]{\node[rectangle,draw=#1,fill=#1!10,line width=4pt,rounded corners=4pt](T){#2}}}

%=====
% Others
%=====
\usefonttheme{professionalfonts}
\usefonttheme[onlymath]{serif}
\renewcommand{\familydefault}{\sfdefault}
\renewcommand{\kanjifamilydefault}{\gtdefault}
\captionsetup[figure]{name=Figure}
\captionsetup[table]{name=Table}
\setbeamertemplate{caption}[numbered]
\setbeamertemplate{navigation symbols}{}
\setbeamerfont{caption}{size=\normalsize}
\setbeamerfont{block title}{size=\LARGE}
\setbeamerfont*{itemize/enumerate body}{size=\large}
\setbeamerfont*{itemize/enumerate subbody}{parent=itemize/enumerate body, size=\large}
\setbeamerfont*{itemize/enumerate subsubbody}{parent=itemize/enumerate subbody, size=\large}

\newcommand{\itemsize}{\footnotesize}
\setbeamerfont{bibliography item}{size=\itemsize}
\setbeamerfont{bibliography entry author}{size=\itemsize}
\setbeamerfont{bibliography entry title}{size=\itemsize}
\setbeamerfont{bibliography entry location}{size=\itemsize}
\setbeamerfont{bibliography entry note}{size=\itemsize}

% 文中の数式($~~$)をdisplaystyleにする
\everymath{\displaystyle}

% \left，\rightの無駄な余白をなくす
\let\originalleft\left
\let\originalright\right
\renewcommand{\left}{\mathopen{}\mathclose\bgroup\originalleft}
\renewcommand{\right}{\aftergroup\egroup\originalright}
\mode
<all>
